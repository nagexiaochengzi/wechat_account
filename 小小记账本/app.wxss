/**app.wxss**/
@import './style/weui.wxss';

page {
    height: 100%;
    -webkit-tap-highlight-color: transparent;
    background-color: whitesmoke;
}

.tourism-title {
    text-align: center;
    font-size: 40px;
    color: #179b16;
    font-weight: 400;
    margin: 0 15%;
}

.tourism-header {
    padding: 35px 0;
}

.tourism-sub-title {
    text-align: center;
    color: #888888;
    font-size: 14px;
}

.tourism-header-spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.tourism-image_radius {
  width: 20px;
  height: 20px;
  margin-right: 10px; 
  display:block;
  border-radius: 3px;
}